{
    "version": 1,
    "settings": {
        "appearanceTools": true,
        "spacing": {
            "blockGap": true,
            "margin": true,
            "padding": true
        },
        "align": {
            "wide": true,
            "full": true
        },
        "layout": {
            "contentSize": "930px",
            "wideSize": "1400px"
        }
    },
    "styles": {
        "blocks": {
            "core/image": {
                "elements": {
                    "figure": {
                        "maxWidth": "100%",
                        "marginLeft": "auto",
                        "marginRight": "auto"
                    }
                }
            },
            "core/button": {
                "border": {
                    "radius": "0",
                    "width": "1px",
                    "style": "solid",
                    "color": "rgba(0, 0, 0, 0.3)"
                },
                "typography": {
                    "fontSize": "14px",
                    "lineHeight": "1",
                    "fontWeight": "600"
                },
                "spacing": {
                    "padding": "9px 15px"
                }
            },
            "core/heading": {
                "typography": {
                  "lineHeight": "1.3"
                }
              }
        },
        "elements": {
            "link": {
                "typography": {
                    "textDecoration": "none"
                }
            },
            "button": {
                "border": {
                    "radius": "0",
                    "width": "1px",
                    "style": "solid",
                    "color": "rgba(0, 0, 0, 0.3)"
                },
                "typography": {
                    "fontSize": "14px",
                    "lineHeight": "1",
                    "fontWeight": "600"
                },
                "spacing": {
                    "padding": "9px 15px"
                }
            }
        }
    }
}